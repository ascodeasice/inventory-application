extends layout 

block content 
    h1 #{title}
    if(books.length>0)
        p You need to delete these books before deleting this #{itemName}
        ul 
            each book in books 
                a(href=book.url)
                    li  #{book.title} 
    else 
        p Are you sure you want to delete this #{itemName}?
        form(method="POST" action="")
            .formGroup
            button.redButton(type="submit") Delete
            input#id(type="hidden" name="id" required=true value=item._id)