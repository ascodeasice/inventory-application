extends layout 

block content 
    h1 #{title}
    form(method="POST" action="")
        .formGroup
            label(for="name") Name: 
            input#name(type='text' placeholder='Name' name='name' required='true' value=(item==undefined?"":item.name))
        button.orangeButton(type="submit") Submit
    
    if errors
        ul
            each error in errors 
                li!=error.msg